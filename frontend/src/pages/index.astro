---
import { getImage } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import Stats from "../components/Stats.astro";

import { images } from "../components/BackgroundImages/credits";
import ImageCredits from "../components/ImageCredits.astro";

const image = images[Math.floor(Math.random() * images.length)]

const optimizedBackground = await getImage({src: image?.image})
---

<Layout title="JoJo Transcribe">
  <main style={`background-image: url(${optimizedBackground.src});`}>
    <Logo />

    <Stats />

	<ImageCredits imageAuthor={image?.author} imageOrigin={image?.origin} />
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    height: 100dvh;
	padding: 32px;
	background-size: cover;
    background-position: center;
  }
</style>
